<?xml version="1.0"?>
<ruleset name="Fluent Standard">
    <description>WordPress Coding Standard that we use in Fluent Team.</description>
    <rule ref="WordPress">
        <exclude name="WordPress.Files.FileName"/>
        <exclude name="WordPress.Security.NonceVerification.Recommended"/>
    </rule>

    <rule ref="WordPress.Security.EscapeOutput">
        <properties>
            <property name="customEscapingFunctions" type="array">
<!--                <element value="fluentform_kses_js"/>-->
            </property>
        </properties>
    </rule>

    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4"/>
            <property name="tabIndent" value="false"/>
        </properties>
    </rule>

    <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>

    <!-- We allow empty catch statements -->
    <rule ref="Generic.CodeAnalysis.EmptyStatement.DetectedCATCH">
        <severity>0</severity>
    </rule>

    <rule ref="WordPress.DateTime.RestrictedFunctions.date_date">
        <severity>0</severity>
    </rule>

</ruleset>
